@model _23DH113462_MyStore.Models.ViewModel.HomeProductVM
@{
    ViewBag.Title = "Customer Hone Page";
    <link rel="stylesheet" type="text/css" href="~/Content/myStyle/CustomerHome.css" />
}
@*PHẦN BANNER*@
<section class="container-fluid banner">
    <div class="banner-container">
        <h2>Chào mừng đến trang web commerce</h2>
        <p>Mua sắn trực tuyến với hàng ngàn sản phần đa dạng và chất lượng</p>
        <a href="#" class="btnBanner">Bắt đầu mua sẵn</a>
    </div>
</section>
<section class="container-fluid searchProd">
    <h2>Tìm kiếm sản phẩm</h2>
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        <div class="form-group search-container">
            @Html.TextBoxFor(m => m.SearchTerm, new
       {
           @class = "search-input",
           placeholder = "Nhập tên, mô tả hoặc chủng loại sản phần"
       })

            <button type="submit" class="search-button">Tin kiến</button>
        </div>
    }
</section>
<hr />

@*PHẦN SẢN PHẨM NỔI BẬT*@
@Html.Partial("_PVFeatureProduct", Model)

@*PHẦN SẢN PHẨM MỚI*@
@Html.Partial("_PVNewProduct", Model)