@model _23DH113462_MyStore.Models.ViewModel.HomeProductVM

<link rel="stylesheet" type="text/css" href="~/Content/myStyle/CustomerHome.css" />

<!--Hiển thị danh sách sản phẩm-->
@if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
{
    <section class="container-fluid featureProd">
        <h2>Sản phần nổi bật</h2>
        <div class="feature-container">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="fproduct-item">
                    <div>
                        <a href="@Url.Action(" ProductDetail", "Hone", new { id = product.ProductID })">
                            <img src="@Html.DisplayFor(modelIten => product.ProductImage)" />
                        </a>
                    </div>
                    <div>
                        <p class="prodPrice">@Html.DisplayFor(modelIten => product.ProductPrice)</p>
                        <p class="prodName">@Html.DisplayFor(modelItem => product.ProductName) </p>
                        <p class="prodCate">@Html.DisplayFor(modelItem => product.Category.CategoryName)</p>
                        <p class="prodSale">
                            Đã bán:&nbsp; @Html.DisplayFor(modelItem => product.OrderDetails.Count)
                        </p>
                    </div>
                </div>
            }
        </div>
    </section>
}
